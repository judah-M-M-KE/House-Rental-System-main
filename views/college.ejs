  <body>
  
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul> 


    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12">
          
    <form action="/users/college" method="POST" class="form-container">
             <h1>Colleges</h1>
     
                <div class="form-group">
         
                     <input type="text"  id="college_name" name="college_name" placeholder="College Name" required />
                  </div>
    
                      <div class="form-group">
                        <input
                        type="address"
                        id="address"
                        name="address"
                        placeholder="Address"
                        required
                      />
                            </div>
                            <div class="form-group"> 
                              <input type="text" name="add2" id="add2" placeholder="latitude">
                              
                                      
                              <input type="text" name="add3" id="add3" placeholder="longitude">
                              <br>
                              <br>

                            
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="getloc()">Get location</button>
                    <hr>

                      <button type="submit" class="btn btn-success btn-block">Submit</button>
              
  
                    </div>
                    <a href="/logout">Logout</a>       

                    </div>
            
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
      </div>    
    
      
    </form>
    <script>
        var x=document.getElementById('add2');
        var y=document.getElementById('add3');
        function getloc()
        {
            
            if(navigator.geolocation)
            {
                navigator.geolocation.getCurrentPosition(showposition);
    
    
            }
            else{
                x.innerHTML="not supported";
            }
        }
        function showposition(position)
        {
            x.value=position.coords.latitude;
            y.value=position.coords.longitude;
    
    
            //x.innerHTML="<h1>lat: </h1>"+position.coords.latitude;
            //x.innerHTML+="<h1>lon: </h1>"+position.coords.longitude;
            //x.innerHTML+='<input type="text" name="loc" id="loc" value="hie">';
    
        }
        </script>
