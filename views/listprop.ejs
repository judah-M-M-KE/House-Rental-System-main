<!-- Filter  Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModal" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Update a property</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form action="/users/update" method="POST">
      <label for="updateprop">PID:</label>
      <input type="text" class="form-control" name="updateprop" id="rentPrice" placeholder="enter " value="" required="">
      
     
      
     



    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
  </div>
</div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete a property</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/users/delete" method="POST">
        <label for="deleteprop">PID:</label>
        <input type="text" class="form-control" name="deleteprop" id="rentPrice" placeholder="enter " value="" required="">
        
       
        
       
  
  
  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Delete</button>
      </div>
    </form>
    </div>
  </div>
  </div>
    <table class="table table-bordered table-dark">
        <thead>
          <tr>
            <th scope="col">pid</th>
            
            <th scope="col">Area</th>
            <th scope="col">Rent </th>
            <th scope="col"> No_of_people</th>
            <th scope="col">Type_Of_Food</th>
            <th scope="col">Gender_allowed</th>
            <th scope="col">Address</th>
          </tr>
        </thead>
        <tbody>
        <% if (typeof ldata != 'undefined') { %> <% ldata.forEach(i => { %>
        
          <tr>
            <th scope="row"><%= i.pid %></th>
            <td><%= i.area %></td>
            
            <td><%= i.rent %></td>
            <td><%= i.no_of_people %></td>
            <td><%= i.food %></td>
            <td><%= i.gender_allowed %></td>
            <td><%= i.address %></td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
