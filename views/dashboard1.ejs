<!-- Filter  Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Filters</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/users/filters" method="POST">
        <label for="rentPrice">Rent Price below:</label>
        <input type="text" class="form-control" name="rentPrice" id="rentPrice" placeholder="enter price" value="" required="">
        <br>
        <label for="rentPrice">Distance from College:</label>
        <input type="text" class="form-control" name="distC" id="distC" placeholder="enter distance in km" value="" required="">
        <br>
        <label for="gender">Select gender:</label>
        <br><input type="radio" name="gender" value="male"> Male<br>
          <input type="radio" name="gender" value="female"> Female<br>
          <input type="radio" name="gender" value="both"> Both <br>
          <br>
          <label for="food_">Select food:</label>
          <br><input type="radio" name="food_" value="veg"> Veg <br>
          <input type="radio" name="food_" value="non-veg"> Non-veg <br>
          <input type="radio" name="food_" value="both"> Both <br>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Apply</button>
      </div>
    </form>
