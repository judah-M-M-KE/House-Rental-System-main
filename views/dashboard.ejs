<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body >
  <nav class=" navbar navbar-expand-lg navbar-dark bg-dark" >
    <a class="navbar-brand" ><img src="/homeLogo.png" width="30" height="30" alt="" loading="lazy">
      Home for all</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto" style="margin-left:50px ;">
           
            <li class="nav-item">
              <a class="nav-link" href="/logout"><h2>Logout</h2></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/listmyproperty"><h2>My properties</h2></a>
        </li>
          
        </ul>
        
    </div>
</nav>
    <div  class="container-sm " style="margin-top: 25px; font: 1.5em sans-serif;">
        <ul>
            <% if(messages.success_msg) { %>
            
            <div class="alert alert-success" role="alert">
                <%= messages.success_msg %>
              </div>
            <% } %>
          </ul>
    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
            <div class="alert alert-danger" role="alert">
                <%= error.message %>
              </div>
        <% }) %> <% } %>
      </ul>
    
    <h1 style="font: 2.5em sans-serif;">Hello <%= user%> </h1>
    
    
    
    
    
    <h5 style="font: 2.em sans-serif;">Add a property for renting?</h5>
    <form action="/users/addproperty" method="POST">
        
      
        <div style="margin-top: 15px;">
            <input type="number" id="area" name="area" placeholder="area in sq feet" required />
        </div>
        <div style="margin-top: 15px;">
            <input type="number" id="rent" name="rent" placeholder="Rent Amount" required />
        </div>
        <div style="margin-top: 15px;">
            
            <textarea id="address" name="address" rows="4" cols="50" placeholder="address"></textarea>
        </div>
        <div style="margin-top: 15px;">

        </div>
        <div style="margin-top: 15px;"> 
        <input type="text" name="add2" id="add2" placeholder="latitude">

        <input type="text" name="add3" id="add3" placeholder="longitude">
    <button type="button" class="btn btn-outline-primary btn-sm" onclick="getloc()">Get location</button>
    
            </div>
            <div style="margin-top: 15px;">  
                <textarea id="bldg_name" name="bldg_name" rows="2" cols="50" placeholder="name of building"></textarea>
              </div>
      
              <div style="margin-top: 15px;">  
                <textarea id="street" name="street" rows="2" cols="50" placeholder="name of street"></textarea>
              </div>
      
              <div style="margin-top: 15px;">
                <input type="number" id="no_of_people" name="no_of_people" placeholder="no. of people" required />
              </div>
              
      
             
      
              <div style="margin-top: 15px;" class="form-group">
                <label for="food">Food Allowed:<br>   </label> <br>
                <input type="radio" name="food" value="veg"> Veg <br>
                <input type="radio" name="food" value="nonVeg"> Non-veg <br>
                <input type="radio" name="food" value="both"> Both <br>
              </div> 
      
              <div style="margin-top: 15px;" class="form-group">
                <label for="gender_allowed">Gender Allowed:<br> </label>
                <br><input type="radio" name="gender_allowed" value="male"> Male<br>
                <input type="radio" name="gender_allowed" value="female"> Female<br>
                <input type="radio" name="gender_allowed" value="both"> Both <br>
                
              </div> 
      
      
        <div style="margin-top: 15px;">
            <button type="submit" class="btn btn-outline-primary btn-sm">Add</button>

        </div>
        
    </form>

    </div>

    <script>
        var x=document.getElementById('add2');
        var y=document.getElementById('add3');
        function getloc()
        {
            
            if(navigator.geolocation)
            {
                navigator.geolocation.getCurrentPosition(showposition);
    
    
            }
            else{
                x.innerHTML="not supported";
            }
        }
        function showposition(position)
        {
            x.value=position.coords.latitude;
            y.value=position.coords.longitude;
    
    
            //x.innerHTML="<h1>lat: </h1>"+position.coords.latitude;
            //x.innerHTML+="<h1>lon: </h1>"+position.coords.longitude;
            //x.innerHTML+='<input type="text" name="loc" id="loc" value="hie">';
    
        }
        </script>

</body>
</html>
